---
interface Pattern {
  title: string;
  slug: string;
  description: string;
}

interface Props {
  title: string;
  description: string;
  patterns: Pattern[];
  color?: string;
  icon?: string;
}

const {
  title,
  description,
  patterns,
  color = "#4a6cf7",
  icon = "ðŸ§©",
} = Astro.props;
---

<div class="category-card" style={`--accent-color: ${color};`}>
  <div class="category-header">
    <div class="category-icon">{icon}</div>
    <h2 class="category-title">{title}</h2>
  </div>

  <p class="category-description">{description}</p>

  <div class="pattern-grid">
    {
      patterns.map((pattern) => (
        <a href={`/ddd/${pattern.slug}`} class="pattern-card">
          <h3 class="pattern-title">{pattern.title}</h3>
          <p class="pattern-description">{pattern.description}</p>
          <span class="learn-more">ÐŸÐ¾Ð´Ñ€Ð¾Ð±Ð½ÐµÐµ â†’</span>
        </a>
      ))
    }
  </div>
</div>

<style>
  .category-card {
    margin: 3rem 0;
    padding: 2rem;
    border-radius: 12px;
    background-color: white;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    border-top: 4px solid var(--accent-color);
  }

  .category-header {
    display: flex;
    align-items: center;
    margin-bottom: 1rem;
  }

  .category-icon {
    font-size: 2rem;
    margin-right: 0.75rem;
  }

  .category-title {
    margin: 0;
    font-size: 1.8rem;
    color: #333;
  }

  .category-description {
    font-size: 1.1rem;
    color: #555;
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .pattern-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1.5rem;
  }

  .pattern-card {
    padding: 1.5rem;
    border-radius: 8px;
    background-color: #f8f9fa;
    text-decoration: none;
    color: inherit;
    transition: all 0.3s ease;
    height: 100%;
    display: flex;
    flex-direction: column;
    border: 2px solid transparent;
    cursor: pointer;
    position: relative;
    overflow: hidden;
  }

  .pattern-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15);
    background-color: #f1f5f9;
    border-color: var(--accent-color);
  }

  .pattern-card:active {
    transform: translateY(-2px);
  }

  .pattern-title {
    font-size: 1.3rem;
    margin: 0 0 0.75rem;
    color: var(--accent-color);
    font-weight: 600;
    transition: color 0.2s ease;
  }

  .pattern-card:hover .pattern-title {
    color: #1e40af;
  }

  .pattern-description {
    color: #666;
    margin: 0 0 1.5rem;
    flex-grow: 1;
  }

  .learn-more {
    align-self: flex-end;
    font-weight: 600;
    color: var(--accent-color);
    transition: all 0.2s ease;
    font-size: 0.9rem;
    padding: 0.25rem 0;
  }

  .pattern-card:hover .learn-more {
    color: #1e40af;
    transform: translateX(3px);
  }

  @media (prefers-color-scheme: dark) {
    .category-card {
      background-color: #1e1e2e;
      border-top: 4px solid var(--accent-color);
    }

    .category-title {
      color: #e0e0e0;
    }

    .category-description {
      color: #ccc;
    }

    .pattern-card {
      background-color: #252836;
      border-color: transparent;
    }

    .pattern-card:hover {
      background-color: #2a2c42;
      border-color: var(--accent-color);
    }

    .pattern-card:hover .pattern-title {
      color: #60a5fa;
    }

    .pattern-card:hover .learn-more {
      color: #60a5fa;
    }

    .pattern-description {
      color: #aaa;
    }
  }

  @media (max-width: 768px) {
    .pattern-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
