<style>
  .main-header {
    background: white;
    border-bottom: 1px solid #e5e7eb;
    position: sticky;
    top: 0;
    z-index: 100;
    box-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1);
  }

  .header-container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
  }

  .logo a {
    display: flex;
    align-items: center;
    text-decoration: none;
    color: #333;
    font-weight: 700;
    font-size: 1.2rem;
  }

  .logo-icon {
    font-size: 1.8rem;
    margin-right: 0.5rem;
  }

  .logo-text {
    background: linear-gradient(90deg, #4a6cf7 0%, #6e8ff5 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .nav-list {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: 2rem;
  }

  .nav-link {
    display: flex;
    align-items: center;
    text-decoration: none;
    color: #6b7280;
    font-weight: 500;
    padding: 0.5rem 0.75rem;
    border-radius: 6px;
    transition: all 0.2s ease;
    position: relative;
  }

  .nav-link:not(.disabled):hover {
    color: #4a6cf7;
    background-color: #f1f5f9;
  }

  .nav-link.active {
    color: #4a6cf7;
    background-color: #e0f2fe;
  }

  .nav-link.disabled {
    color: #9ca3af;
    cursor: not-allowed;
    opacity: 0.6;
  }

  .coming-soon {
    display: inline-block;
    background-color: #f3f4f6;
    color: #6b7280;
    padding: 0.125rem 0.375rem;
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: 600;
    margin-left: 0.5rem;
  }

  @media (prefers-color-scheme: dark) {
    .main-header {
      background: #1e1e2e;
      border-bottom-color: #3e3e5e;
    }

    .logo a {
      color: #e0e0e0;
    }

    .nav-link {
      color: #a8a8b3;
    }

    .nav-link:not(.disabled):hover {
      color: #6e8ff5;
      background-color: #2a2a3e;
    }

    .nav-link.active {
      color: #6e8ff5;
      background-color: #252836;
    }

    .nav-link.disabled {
      color: #6b7280;
    }

    .coming-soon {
      background-color: #374151;
      color: #9ca3af;
    }
  }

  @media (max-width: 768px) {
    .header-container {
      padding: 0.75rem 1rem;
    }

    .logo-text {
      display: none;
    }

    .nav-list {
      gap: 1rem;
    }

    .nav-link {
      font-size: 0.9rem;
      padding: 0.5rem;
    }

    .coming-soon {
      display: none;
    }
  }

  @media (max-width: 480px) {
    .nav-list {
      gap: 0.5rem;
    }

    .nav-link {
      font-size: 0.8rem;
      padding: 0.25rem 0.5rem;
    }
  }
</style>
