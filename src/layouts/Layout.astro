---
import Header from "../components/Header.astro";

interface Props {
  title?: string;
}

const {
  title = "Архитектурный Гуру - Путеводитель по архитектуре программного обеспечения",
} = Astro.props;
---

<!doctype html>
<html lang="ru">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta
      name="description"
      content="Архитектурный Гуру - образовательный ресурс о паттернах и принципах архитектуры программного обеспечения, Domain-Driven Design и Clean Architecture"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <Header />

    <main>
      <slot />
    </main>

    <footer>
      <div class="footer-container">
        <div class="footer-content">
          <div class="footer-section">
            <h3>Архитектурный Гуру</h3>
            <p>Путеводитель по архитектуре программного обеспечения</p>
          </div>
          <div class="footer-section">
            <h3>Разделы</h3>
            <ul>
              <li><a href="/ddd/">Domain-Driven Design</a></li>
              <li><a href="/smells/">Архитектурные запахи</a></li>
              <li><a href="#" class="disabled">Clean Architecture</a></li>
              <li><a href="#" class="disabled">System Design</a></li>
            </ul>
          </div>
          <div class="footer-section">
            <h3>Ресурсы</h3>
            <ul>
              <li><a href="https://github.com/jefo/backend-guru">GitHub</a></li>
              <li><a href="#" class="disabled">Блог</a></li>
              <li><a href="#" class="disabled">Контакты</a></li>
            </ul>
          </div>
        </div>
        <div class="footer-bottom">
          <p>
            &copy; {new Date().getFullYear()} Архитектурный Гуру. Все права защищены.
          </p>
        </div>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  :root {
    --primary-color: #4a6cf7;
    --secondary-color: #6e8ff5;
    --text-color: #333333;
    --text-color-light: #666666;
    --background-color: #ffffff;
    --background-color-alt: #f8f9fa;
    --border-color: #eaeaea;
    --border-radius: 8px;
    --box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
    --transition: all 0.3s ease;
  }

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html {
    font-family: "Inter", system-ui, sans-serif;
    background: var(--background-color);
    color: var(--text-color);
  }

  body {
    margin: 0;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    margin: 0 0 1rem 0;
    line-height: 1.2;
  }

  a {
    color: var(--primary-color);
    text-decoration: none;
    transition: var(--transition);
  }

  a:hover {
    color: var(--secondary-color);
  }

  a.disabled {
    opacity: 0.6;
    cursor: not-allowed;
    pointer-events: none;
  }

  p {
    margin: 0 0 1rem 0;
    line-height: 1.6;
  }

  main {
    flex: 1;
  }

  /* Footer Styles */
  footer {
    background-color: #2c2e45;
    color: white;
    padding: 3rem 1rem 1rem;
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .footer-section h3 {
    font-size: 1.2rem;
    margin-bottom: 1rem;
    color: white;
  }

  .footer-section p {
    opacity: 0.8;
  }

  .footer-section ul {
    list-style: none;
  }

  .footer-section ul li {
    margin-bottom: 0.5rem;
  }

  .footer-section a {
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    transition: color 0.3s;
  }

  .footer-section a:hover {
    color: white;
  }

  .footer-bottom {
    text-align: center;
    padding-top: 1.5rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .footer-bottom p {
    font-size: 0.9rem;
    opacity: 0.7;
  }
</style>
